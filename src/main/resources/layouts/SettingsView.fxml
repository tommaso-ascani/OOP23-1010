<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="mainPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop23_1010.view.gameView.SettingsView">
   <children>
      <Pane fx:id="settingsPane" prefWidth="800.0" prefHeight="450.0" >
         <children>
            <Label layoutX="300.0" layoutY="20.0" prefWidth="200.0" prefHeight="40" text="SETTINGS" alignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Label layoutX="350.0" layoutY="100.0" prefWidth="100.0" prefHeight="40" text="Master Volume" alignment="CENTER" />
            <Slider fx:id="sliderVolume" layoutX="250.0" layoutY="150.0" prefWidth="300.0" prefHeight="40.0" blockIncrement="2.0" snapToTicks="true" min="0" max="100" showTickMarks="true" showTickLabels="true" majorTickUnit="10" minorTickCount="1">
               <cursor>
                  <Cursor fx:constant="H_RESIZE" />
               </cursor>
            </Slider>
            <ImageView fx:id="imageVolume" layoutX="375.0" layoutY="220.0" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#changeVolumeImage" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="buttonApply" layoutX="150.0" layoutY="300.0" prefWidth="100.0" prefHeight="40.0" mnemonicParsing="false" text="Applica" />
            <Button fx:id="buttonBack" layoutX="550.0" layoutY="300.0" prefWidth="100.0" prefHeight="40.0" mnemonicParsing="false" onMouseClicked="#switchToHomeView" text="Indietro" />
         </children>
      </Pane>
   </children>
</AnchorPane>